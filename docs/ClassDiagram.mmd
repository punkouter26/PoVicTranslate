classDiagram
    class Lyrics {
        +int Id
        +string Title
        +string Artist
        +string LyricsText
        +bool IsCockney
        +DateTime CreatedDate
        +DateTime LastModified
        +Validate() bool
        +ToString() string
    }
    
    class TranslationRequest {
        +string Text
        +int MaxLength
        +Validate() bool
    }
    
    class TranslationResponse {
        +string OriginalText
        +string TranslatedText
        +DateTime Timestamp
        +int ProcessingTimeMs
    }
    
    class AudioSynthesisRequest {
        +string Text
        +string Voice
        +float Speed
        +int Pitch
        +Validate() bool
    }
    
    class HealthCheckResult {
        +string Status
        +DateTime Timestamp
        +List~HealthCheck~ Checks
    }
    
    class HealthCheck {
        +string Name
        +string Status
        +string Description
        +string Error
    }
    
    class ApiSettings {
        +string AzureOpenAIEndpoint
        +string AzureOpenAIApiKey
        +string AzureOpenAIDeploymentName
        +string AzureSpeechRegion
        +string AzureSpeechSubscriptionKey
        +Validate() bool
    }
    
    class TelemetryEvent {
        <<abstract>>
        +string EventName
        +DateTime Timestamp
        +Dictionary~string,string~ Properties
        +Track() void
    }
    
    class TranslationTelemetry {
        +int InputLength
        +int OutputLength
        +bool Success
        +int ProcessingTimeMs
        +string ErrorMessage
    }
    
    class LyricsAccessTelemetry {
        +string Operation
        +int LyricsId
        +bool Success
        +string ErrorMessage
    }
    
    class AudioSynthesisTelemetry {
        +int TextLength
        +string Voice
        +bool Success
        +float AudioDurationSeconds
        +string ErrorMessage
    }
    
    HealthCheckResult "1" --o "*" HealthCheck : contains
    TelemetryEvent <|-- TranslationTelemetry : inherits
    TelemetryEvent <|-- LyricsAccessTelemetry : inherits
    TelemetryEvent <|-- AudioSynthesisTelemetry : inherits
    
    class ITranslationService {
        <<interface>>
        +TranslateAsync(request) Task~TranslationResponse~
    }
    
    class ILyricsService {
        <<interface>>
        +GetAllAsync() Task~List~Lyrics~~
        +GetByIdAsync(id) Task~Lyrics~
        +AddAsync(lyrics) Task~Lyrics~
        +UpdateAsync(lyrics) Task
        +DeleteAsync(id) Task
    }
    
    class IAudioSynthesisService {
        <<interface>>
        +SynthesizeAsync(request) Task~byte[]~
    }
    
    class ICustomTelemetryService {
        <<interface>>
        +TrackTranslationRequest(properties) void
        +TrackLyricsAccess(properties) void
        +TrackAudioSynthesis(properties) void
    }
    
    ITranslationService ..> TranslationRequest : uses
    ITranslationService ..> TranslationResponse : returns
    ILyricsService ..> Lyrics : manages
    IAudioSynthesisService ..> AudioSynthesisRequest : uses
    ICustomTelemetryService ..> TelemetryEvent : tracks
