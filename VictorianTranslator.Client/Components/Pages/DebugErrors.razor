@page "/debug-errors"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<div class="container mt-4">
    <h1 class="text-gradient-gold">Error Debugging Page</h1>
    <p class="text-muted">Use this page to test error scenarios and monitoring</p>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card bg-urban p-4">
                <h3>JavaScript Errors</h3>
                <button class="btn btn-danger mt-2" @onclick="TriggerJSError">Trigger JS Error</button>
                <button class="btn btn-warning mt-2" @onclick="TriggerPromiseRejection">Trigger Promise Rejection</button>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card bg-urban p-4">
                <h3>C# Errors</h3>
                <button class="btn btn-danger mt-2" @onclick="TriggerCSharpException">Trigger C# Exception</button>
                <button class="btn btn-warning mt-2" @onclick="TriggerNullReference">Trigger Null Reference</button>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-urban p-4">
                <h3>Error UI Status</h3>
                <button class="btn btn-info mt-2" @onclick="CheckErrorUIStatus">Check Error UI Status</button>
                <button class="btn btn-secondary mt-2" @onclick="ShowErrorUI">Show Error UI</button>
                <button class="btn btn-secondary mt-2" @onclick="HideErrorUI">Hide Error UI</button>
                
                @if (!string.IsNullOrEmpty(errorStatus))
                {
                    <div class="alert alert-info mt-3">
                        <pre>@errorStatus</pre>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private string errorStatus = "";

    private async Task TriggerJSError()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", "throw new Error('Test JavaScript Error from Debug Page');");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"JS Error triggered: {ex.Message}");
        }
    }

    private async Task TriggerPromiseRejection()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", "Promise.reject(new Error('Test Promise Rejection from Debug Page'));");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Promise rejection triggered: {ex.Message}");
        }
    }

    private void TriggerCSharpException()
    {
        throw new InvalidOperationException("Test C# Exception from Debug Page");
    }

    private void TriggerNullReference()
    {
        string? nullString = null;
        var length = nullString!.Length; // This will throw NullReferenceException
    }

    private async Task CheckErrorUIStatus()
    {
        try
        {
            var status = await JSRuntime.InvokeAsync<string>("eval", @"
                const errorUI = document.getElementById('blazor-error-ui');
                if (errorUI) {
                    const computedStyle = window.getComputedStyle(errorUI);
                    return JSON.stringify({
                        exists: true,
                        inlineDisplay: errorUI.style.display,
                        computedDisplay: computedStyle.display,
                        visibility: computedStyle.visibility,
                        opacity: computedStyle.opacity,
                        innerHTML: errorUI.innerHTML,
                        offsetWidth: errorUI.offsetWidth,
                        offsetHeight: errorUI.offsetHeight
                    }, null, 2);
                } else {
                    return JSON.stringify({ exists: false }, null, 2);
                }
            ");
            errorStatus = status;
        }
        catch (Exception ex)
        {
            errorStatus = $"Error checking status: {ex.Message}";
        }
    }

    private async Task ShowErrorUI()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                const errorUI = document.getElementById('blazor-error-ui');
                if (errorUI) {
                    errorUI.style.display = 'block';
                    console.log('üîç Manually showing error UI');
                }
            ");
        }
        catch (Exception ex)
        {
            errorStatus = $"Error showing UI: {ex.Message}";
        }
    }

    private async Task HideErrorUI()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                const errorUI = document.getElementById('blazor-error-ui');
                if (errorUI) {
                    errorUI.style.display = 'none';
                    console.log('üîç Manually hiding error UI');
                }
            ");
        }
        catch (Exception ex)
        {
            errorStatus = $"Error hiding UI: {ex.Message}";
        }
    }
}
