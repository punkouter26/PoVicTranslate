@namespace Po.VicTranslate.Client.Components.Shared

<div class="accordion-section @(IsExpanded ? "expanded" : "collapsed")">
    <div class="accordion-header" @onclick="ToggleExpanded" role="button" tabindex="0" 
         @onkeydown="HandleKeyDown" aria-expanded="@IsExpanded">
        <div class="accordion-title">
            @if (Icon != null)
            {
                <i class="@Icon"></i>
            }
            <span>@Title</span>
        </div>
        <i class="fas fa-chevron-down accordion-icon"></i>
    </div>
    <div class="accordion-content">
        <div class="accordion-body">
            @ChildContent
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public bool IsExpanded { get; set; }

    [Parameter]
    public EventCallback<bool> IsExpandedChanged { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private async Task ToggleExpanded()
    {
        IsExpanded = !IsExpanded;
        await IsExpandedChanged.InvokeAsync(IsExpanded);
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" || e.Key == " ")
        {
            await ToggleExpanded();
        }
    }
}
