@namespace Po.VicTranslate.Client.Components.Shared

<div class="fab-container @(IsVisible ? "visible" : "hidden")" @onclick="OnClick">
    <button class="fab-button" 
            disabled="@IsDisabled" 
            title="Transform to Victorian"
            aria-label="Transform to Victorian English">
        @if (IsLoading)
        {
            <div class="fab-spinner"></div>
        }
        else
        {
            <i class="fas fa-magic"></i>
        }
    </button>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; } = true;

    [Parameter]
    public bool IsDisabled { get; set; }

    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }
}
